
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="row bg-info">
            <div class="col-lg-4"></div>
            <div class="col-lg-6">
                <img src="~/images/imagesave.jpg" />
                <div class="col-lg-2"></div>

            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary-subtle">
            <a class="navbar-brand text-primary" href="#">Student Registration</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
       
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ">
                    <li class="nav-item active ">
                        <a class="nav-link text-primary" href="@Url.Action("Home","StudentDetails")">Home </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="@Url.Action("States","StudentDetails")">States</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="@Url.Action("Districts","StudentDetails")">Districts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="@Url.Action("Cities","StudentDetails")">Cities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="@Url.Action("Registration","StudentDetails")">Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout","StudentDetails")">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="row mt-4">
            @RenderBody()
        </div>
    </div>
</body>
</html>
